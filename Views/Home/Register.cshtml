@model OTPLogin.User
@{
	ViewData["Title"] = "Login Page";
}
@if (ViewData["Error"] != null)
{
	<span style="color:red;font-size:large">ViewData["Error"]</span>
}
<div class="text-center">
	<form action="/Home/RegisterNewUser">
		<input type="hidden" id="mobileNo" name="mobileNo" maxlength="10" minlength="10" value="@Model.MobileNo" />
		<label>Name</label>
		<input type="text" id="name" name="name" required />
		<br />
		<label>Email</label>
		<input type="email" id="email" name="email" required />
		<button type="submit" onclick="RegisterUser()">Send Otp</button>
	</form>
 
</div>
